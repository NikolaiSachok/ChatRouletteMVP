<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_default">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_large"
        android:layout_marginTop="@dimen/margin_default_large"
        android:gravity="center"
        android:text="To use the app turn on necessary permissions"
        android:textColor="#34313D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_large"
        android:layout_marginTop="@dimen/margin_default_large"
        android:paddingStart="@dimen/margin_default_large"
        android:src="@drawable/ic_unchecked_permissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

    </ImageView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:text="External storage"
        android:textColor="#5C5866"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/storage"
        app:layout_constraintStart_toEndOf="@+id/storage"
        app:layout_constraintTop_toTopOf="@+id/storage">

    </TextView>

    <ImageView
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_large"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingStart="@dimen/margin_default_large"
        android:src="@drawable/ic_unchecked_permissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storage">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:text="Camera permission"
        android:textColor="#5C5866"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/camera"
        app:layout_constraintStart_toEndOf="@+id/storage"
        app:layout_constraintTop_toTopOf="@+id/camera">

    </TextView>

    <ImageView
        android:id="@+id/micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_large"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingStart="@dimen/margin_default_large"
        android:src="@drawable/ic_unchecked_permissions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera">

    </ImageView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:text="Microphone permission"
        android:textColor="#5C5866"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/micro"
        app:layout_constraintStart_toEndOf="@+id/storage"
        app:layout_constraintTop_toTopOf="@+id/micro">

    </TextView>

    <TextView
        android:id="@+id/sendPermission"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_btn_gray"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:textSize="18sp"
        android:text="Set up permissions"
        android:layout_marginTop="@dimen/margin_default_large"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>